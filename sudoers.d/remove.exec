#!/bin/bash

home_var='/data/data/com.termux/files/'

{
rm ${home_var}"usr/bin/sudo" &&
chmod 777 ${home_var}"usr/etc/sudoers" &&
chmod 777 ${home_var}"usr/etc/sudoers.d/" &&
chmod -R 777 ${home_var}"usr/etc/sudoers.d/" &&
rm ${home_var}"usr/etc/sudoers" &&
rm -R ${home_var}"usr/etc/sudoers.d/" && 
echo -e "\e[1;32m[+]\e[0m Successfully uninstalled sudo!"
} || {
  echo -e "E: Error while uninstalling sudo."
  exit 2
}
